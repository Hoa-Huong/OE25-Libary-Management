<% provide :title, t("publisher_manage") %>
<h2 class = "title"><%= t "publisher_manage" %></h2>
<div class="search-publisher">
  <%= search_form_for @publisher, url: admin_publishers_path, id: :search_form, class: "form-inline my-2 my-lg-0 search-form" do |f|%>
    <%= f.search_field :name_or_address_cont, placeholder: t("search"), class: "form-control" %>
    <%= f.submit class: "btn btn-outline-success my-2 my-sm-0"%>
  <% end %>
</div>
<div class="excel-publisher">
  <%= link_to admin_publishers_path(format: "xls"), class: "btn btn-success" do %>
    <%= t "excel" %>
  <% end %>
</div>
<div class="create-publisher">
  <%= link_to new_admin_publisher_path, class: "btn btn-success" do %>
    <i class="fa fa-plus"></i>
    <%= t "create_publisher" %>
  <% end %>
</div>
<h5><%= t "total" %>: <%= size_item @publisher %></h5>
<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:o="urn:schemas-microsoft-com:office:office"
  xmlns:x="urn:schemas-microsoft-com:office:excel"
  xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Sheet1">
    <table class="table table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col"><%= t "index" %></th>
          <th scope="col"><%= sort_link @publisher, :name, t("name") %></th>
          <th scope="col"><%= sort_link @publisher, :address, t("address") %></th>
          <th scope="col"><%= t "control" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @publishers %>
      </tbody>
    </table>
  </Worksheet>
</Workbook>
<%= paginate @publishers %>
