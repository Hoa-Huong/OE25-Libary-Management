<% provide(:title, "login") %>
<h1><%= t "login" %></h1>
<div class="row">
<div class="col-md-6 col-md-offset-3">
  <%= form_for(:session, url: login_path) do |f| %>

  <%= f.label t "email" %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label t "password" %>
  <%= f.password_field :password, class: "form-control" %>
  <%= link_to t("forgot_password"), new_password_reset_path %>
  <br>

  <%= f.label t "remember_me", class: "checkbox inline" do %>
  <%= f.check_box :remember_me %>
  <span><%= t "remember_me_on_this_computer" %></span>
  <% end %>

  <%= f.submit t("log_in"), class: "btn btn-primary", id: "login_rspec" %>
  <% end %>
<p><%= t "new_user" %><%= link_to t("sign_up_now"), signup_path %></p>
</div>
</div>
