<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <%= f.label t "name" %>
  <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>

  <%= f.label t "email" %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>

  <%= f.label t "address" %>
  <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %>

  <%= f.label t "phone" %>
  <%= f.text_field :phone, autocomplete: "phone", class: "form-control", autofocus: true, placeholder: Settings.xxx %>

  <%= f.label t "identity_card" %>
  <%= f.text_field :identity_card, autofocus: true, autocomplete: "identity_card", class: "form-control" %>

  <%= f.label t "birth" %>
  <%= f.date_field :birth, autofocus: true, autocomplete: "birth", class: "form-control" %>

  <%= f.label t "sex" %>
  <br>
  <%= f.select(:sex, [:male, :female, :other], autofocus: true, autocomplete: "sex", class: "form-control")%>
  <br>

  <%= f.label t "password" %>
  <%= f.password_field :password, autofocus: true, autocomplete: "new password", class: "form-control" %>

  <%= f.label t "password_confirmation" %>
  <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new passwords", class: "form-control" %>

  <div class="actions">
      <%= f.submit yield(:button_text), class: "btn btn-primary user" %>
  </div>
<% end %>
